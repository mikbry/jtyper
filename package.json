{
  "name": "jtyper",
  "version": "0.1.0",
  "description": "Typescript notebook running on browser",
  "main": "dist/index.js",
  "repository": "https://github.com/mikbry/jtyper.git",
  "author": "Mik <mik@mikbry.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf build && mkdir build",
    "build": "yarn clean &  cross-env NODE_ENV=production rollup -c",
    "start": "yarn clean &  cross-env NODE_ENV=development webpack-dev-server --mode development --open --hot --port 9010",
    "lint": "$(yarn bin)/eslint src --ext .ts",
    "test": "cross-env NODE_ENV=test  $(yarn bin)/mocha  --require esm",
    "coverage": "cross-env NODE_ENV=test  $(yarn bin)/nyc  _mocha",
    "report-coverage": "$(yarn bin)/nyc report --reporter=text-lcov > coverage.lcov",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@rollup/plugin-typescript": "^4.1.1",
    "@rollup/plugin-url": "^4.0.1",
    "@types/markdown-it": "^10.0.0",
    "@types/react-dom": "^16.9.6",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^3.5.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "html-replace-webpack-plugin": "^2.5.6",
    "html-webpack-plugin": "^4.2.0",
    "husky": "^4.2.1",
    "nollup": "^0.10.4",
    "prettier": "^1.19.1",
    "raw-loader": "^4.0.0",
    "react-refresh": "^0.7.2",
    "rimraf": "^3.0.1",
    "rollup": "^1.30.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs-alternate": "^0.4.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-hot-css": "^0.0.6",
    "rollup-plugin-react-refresh": "^0.0.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.2.0",
    "style-loader": "^1.1.3",
    "svg-url-loader": "^5.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    }
  },
  "dependencies": {
    "@styled-icons/boxicons-regular": "^10.0.0",
    "@styled-icons/fa-regular": "^10.0.0",
    "@styled-icons/feather": "^10.0.0",
    "@styled-icons/icomoon": "^10.0.0",
    "@styled-icons/styled-icon": "^10.0.0",
    "markdown-it": "^10.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.1.0"
  }
}
