{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./build",
    "incremental": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}